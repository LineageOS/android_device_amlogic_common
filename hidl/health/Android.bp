cc_library_shared {
    name: "android.hardware.health@2.1-impl.amlogic",
    stem: "android.hardware.health@2.0-impl-2.1.amlogic",

    // Only vendor and recovery variants are allowed, not core.
    vendor: true,
    recovery_available: true,

    defaults: ["android.hardware.health@2.1-impl-defaults"],

    srcs: [
        "impl.cpp",
    ],

    static_libs: [
        "android.hardware.health@1.0-convert",
    ],

    // No vintf_fragments because both -impl and -service should have been
    // installed.
}

cc_binary {
    name: "android.hardware.health@2.1-service.amlogic",
    vendor: true,
    defaults: ["android.hardware.health@2.1-impl-defaults"],
    init_rc: ["android.hardware.health@2.1-service.amlogic.rc"],

    srcs: [
        "service.cpp",
    ],

    required: ["android.hardware.health@2.1-impl.amlogic"],

    vintf_fragments: [
        "android.hardware.health@2.1-service.amlogic.xml"
    ],

    overrides: [
        "healthd",
    ],
}
